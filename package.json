{
  "name": "nextjs-app",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "format": "prettier --check \"**/*.+(js|jsx|json|yml|yaml|css|vue)\"",
    "format:fix": "prettier --write \"**/*.+(js|jsx|json|yml|yaml|css|vue)\""
  },
  "dependencies": {
    "@material-ui/core": "^4.11.4",
    "@material-ui/icons": "^4.11.2",
    "@zeit/next-css": "^1.0.1",
    "@zeit/next-sass": "^1.0.1",
    "bootstrap": "^4.5.2",
    "cookies": "^0.8.0",
    "csvtojson": "^2.0.10",
    "dotenv": "^8.2.0",
    "mapbox-gl": "^1.12.0",
    "next": "^9.5.5",
    "next-auth": "^3.1.0",
    "node-sass": "^4.14.1",
    "pg": "^8.3.3",
    "pgtools": "^0.3.0",
    "react": "^16.14.0",
    "react-bootstrap": "^1.3.0",
    "react-cookie": "^4.0.3",
    "react-device-detect": "^1.17.0",
    "react-dom": "^16.14.0",
    "react-mapbox-gl": "^4.8.6",
    "request-ip": "^2.1.3",
    "styled-components": "latest",
    "uuid": "^8.3.0"
  },
  "devDependencies": {
    "babel-eslint": "^10.1.0",
    "eslint": "^7.25.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-loader": "^4.0.2",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-react": "^7.23.2",
    "husky": "^4.3.8",
    "lint-staged": "^10.5.4",
    "prettier": "2.2.1"
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "extends": [
      "eslint:recommended",
      "plugin:react/recommended",
      "prettier",
      "plugin:prettier/recommended"
    ],
    "plugins": [
      "prettier",
      "react"
    ],
    "settings": {
      "react": {
        "version": "detect"
      }
    },
    "env": {
      "browser": true,
      "node": true,
      "es6": true
    },
    "parserOptions": {
      "ecmaFeatures": {
        "jsx": true
      },
      "ecmaVersion": 2018,
      "sourceType": "module"
    },
    "rules": {
      "react/prop-types": "off",
      "react/react-in-jsx-scope": "off"
    }
  },
  "prettier": {
    "printWidth": 90,
    "bracketSpacing": false,
    "trailingComma": "es5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.+(js|jsx)": [
      "eslint --fix",
      "git add"
    ],
    "*.+(json|css|md)": [
      "prettier --write",
      "git add"
    ]
  }
}
